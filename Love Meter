<div class="box">
    <h1>Love Meter ‚ù§Ô∏è</h1>
    <input id="name1" placeholder="Your Name">
    <input id="name2" placeholder="Partner Name">
    <br>
    <button onclick="submitLove()">Check Love</button>
    <div id="result"></div>
</div>

<script>
function submitLove() {
    let n1 = document.getElementById("name1").value.trim();
    let n2 = document.getElementById("name2").value.trim();
    let result = document.getElementById("result");

    if (!n1 || !n2) {
        result.innerHTML = "Please enter both names!";
        return;
    }

    // RANDOM LOVE %
    let percent = Math.floor(Math.random() * 101);
    let message = percent > 50 ? "Lots of love! üòä‚ù§Ô∏è" : "Needs more love ‚òï‚ù§Ô∏è";

    // SHOW RESULT
    result.innerHTML = `
        <b>${n1} ‚ù§Ô∏è ${n2}</b><br>
        Love = ${percent}%<br>
        ${message}
    `;

    // SEND DATA TO GOOGLE FORM
    let url = "https://docs.google.com/forms/d/e/1FAIpQLSe27HCrIfy0--HodZHFSI8xXV_U6HdVWWoJB0Kw3uu3jva3AQ/formResponse?" +
              "entry.1345210278=" + encodeURIComponent(n1) +
              "&entry.1620448554=" + encodeURIComponent(n2);

    var xhr = new XMLHttpRequest();
    xhr.open("POST", url);
    xhr.send();
}
</script>

